@Model ComicBookGallery.Models.ComicBook[]
@{
    ViewBag.Title = "Index";
}

<h2>ViewBag.Title</h2>
<div class="row">
    @foreach (var comicBook in Model)
    {
        <div class="col-md-3">
            <h4>@Model.DisplayText</h4>
            <img src="/Images/@Model.CoverImageFileName"
                 alt="@Model.DisplayText"
                 class="img-responsive" />
        </div>
    }
    
</div>
